    static inline void print(<%- ref_kind %> < <%- nested_ref_kind %> < T > > const& t) {
      ::rust::__zngur_internal_check_init(t);
      ::rust::ZngurPrettyPrinter< <%- nested_ref_kind %> < T > >::print( reinterpret_cast< const <%- nested_ref_kind %> < T > &>(t.__zngur_data) );
    }
  };

